{
  "name": "slack-speak-for-me",
  "version": "1.0.0",
  "private": true,
  "packageManager": "npm@10.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "clean": "turbo run clean",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f slack-backend",
    "docker:build": "docker compose build --no-cache",
    "docker:shell": "docker compose exec slack-backend sh",
    "docker:db:push": "docker compose exec slack-backend npm run db:push --workspace=packages/database",
    "docker:restart": "docker compose restart slack-backend"
  },
  "devDependencies": {
    "turbo": "^2.3.3",
    "typescript": "^5.7.2"
  }
}
