# Docker Development Environment
# Copy this to .env and fill in your Slack credentials

# Database (Docker internal - don't change)
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/slack_speak_for_me

# Redis (Docker internal - don't change)
REDIS_HOST=redis
REDIS_PORT=6379

# Slack OAuth - Get these from https://api.slack.com/apps
SLACK_CLIENT_ID=your_client_id_here
SLACK_CLIENT_SECRET=your_client_secret_here
SLACK_SIGNING_SECRET=your_signing_secret_here

# Generate with: openssl rand -hex 32
SLACK_STATE_SECRET=generate_me_with_openssl_rand_hex_32

# Encryption key for OAuth tokens (64 hex chars = 32 bytes)
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY=generate_me_with_openssl_rand_hex_32

# Anthropic API Key - Get from https://console.anthropic.com
ANTHROPIC_API_KEY=sk-ant-your_key_here

# App config
NODE_ENV=development
PORT=3000

# Session secret for web portal JWT signing (generate with: openssl rand -hex 32)
SESSION_SECRET=generate_me_with_openssl_rand_hex_32

# Super admin emails (comma-separated)
SUPER_ADMIN_EMAILS=
